{#
/**
* @file
* Default theme implementation to display a block.
*
* @see template_preprocess_block()
*
* @ingroup themeable
*/
#}

{% set classes = [
    'clear-both',
    'nasa-pod',
] %}
<div{{ attributes.addClass(classes) }}>
  {% if image %}
    <div class="pod-image">
      <img src="{{ url }}" width="100%" height="auto" alt="{{ title }}">
    </div>
  {% elseif video %}
    <div class="pod-video">
      <iframe src="{{ url }}" width="100%" height="600"></iframe>
    </div>
  {% endif %}
  <div class="pod-explanation">
    <h2>{{ title }}</h2>
    <p>{{ date }}<br />{{ explanation }}</p>
  </div>
</div>

